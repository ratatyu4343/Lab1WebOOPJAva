<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>TestsSystem</display-name>
  <context-param>
    <param-name>log4jConfiguration</param-name>
    <param-value>\WEB-INF\log4j2.xml</param-value>
  </context-param>
  <filter>
    <filter-name>LoginFilter</filter-name>
    <filter-class>Filters.LoginFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>LoginFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>Login</servlet-name>
    <servlet-class>Controllers.LoginController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Home</servlet-name>
    <servlet-class>Controllers.HomeController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Home</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Lesson</servlet-name>
    <servlet-class>Controllers.LessonController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Lesson</servlet-name>
    <url-pattern>/admin/changelesson</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Class</servlet-name>
    <servlet-class>Controllers.ClassController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Class</servlet-name>
    <url-pattern>/admin/changeclass</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>User</servlet-name>
    <servlet-class>Controllers.UserController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>User</servlet-name>
    <url-pattern>/admin/changeuser</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Test</servlet-name>
    <servlet-class>Controllers.TestController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Test</servlet-name>
    <url-pattern>/teacher/changetest</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Question</servlet-name>
    <servlet-class>Controllers.QuestionController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Question</servlet-name>
    <url-pattern>/teacher/changequestion</url-pattern>
  </servlet-mapping>
</web-app>
